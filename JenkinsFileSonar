pipeline
{
	agent any
		stages
		{
			stage ('SCM Checkout')
			{
				git 'https://github.com/Shobhit101/maven-project'
			}
		}
		{
			stage ('Compile Stage')
			{
				steps
				{
					withMaven(maven:'LocalMaven')
					{
						sh 'mvn clean compile'
					}
				}
			}
		}
		{
			stage ('Test Stage')
			{
				steps
				{
					withMaven(maven:'LocalMaven')
					{
						sh 'mvn test'
					}
				}
			}
		}
		{
			stage ('Package Stage')
			{
				steps
				{
					withMaven(maven:'LocalMaven')
					{
						sh 'mvn package'
					}
				}
			}
		}
		{
			stage ('Install Stage with Sonar')
			{
				steps
				{
					withSonarQubeEnv(sonar)
					{
						withMaven(maven:'LocalMaven')
						{
							sh 'mvn install sonar:sonar'
						}
					}
				}
			}
		}
}
