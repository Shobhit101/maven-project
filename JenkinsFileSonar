pipeline
{
	agent any
		stages
		{
			stage ('SCM Checkout')
			{
				git 'https://github.com/Shobhit101/maven-project'
			}
		}
		{
		    agent label 'pipeline'
			stage ('Compile Stage')
			{
				steps
				{
					withMaven(maven:'LocalMaven')
					{
						sh 'mvn clean compile'
					}
				}
			}
		}
		{
			stage ('Test Stage')
			{
				steps
				{
					withMaven(maven:'LocalMaven')
					{
						sh 'mvn test'
					}
				}
			}
		}
		{
			stage ('Package Stage')
			{
				steps
				{
				withSonarQubeEnv('sonar')
					{
					withMaven(maven:'LocalMaven')
					{
						sh 'mvn package sonar:sonar'
					}
					}
				}
			}
		}
}
